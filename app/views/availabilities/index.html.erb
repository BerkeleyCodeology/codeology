<% provide(:title, "Codeology | Availabilities") %>

<section class="section">
  <div class="container is-fluid has-text-centered">
      
    <h1 class="title is-2 has-text-black small-vertical-padding">Available Interviews</h1>

    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Language</th>
          <th>Location</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @allAvailabilitys.each do |availability| %>
          <tr>
            <td class="is-size-6 is-size-7-mobile" style="vertical-align:middle;"><%= availability.time.localtime.strftime("%m/%d/%y") %></td>
            <td class="is-size-6 is-size-7-mobile" style="vertical-align:middle;"><%= availability.time.localtime.strftime("%I:%M %p") %></td>
            <td class="is-size-6 is-size-7-mobile" style="vertical-align:middle;"><% if availability.is_python %>Python<% else %>Java<% end %></td>
            <td class="is-size-6 is-size-7-mobile" style="vertical-align:middle;"><% if availability.is_videocall %>Videocall<% else %>On Campus<% end %></td>
            <td style="vertical-align:middle;">
              <!-- if availability belongs to user, render a disabled book button instead -->
              <%= link_to_if availability.user_id != session[:user_id], 'Book', availability, method: :patch, data: { confirm: 'You are about to book for: ' + 
              availability.time.localtime.strftime("%m/%d/%y") + " " + availability.time.localtime.strftime("%I:%M %p") + 
              ". This will destroy any availabilities you have posted that overlap with this booking." },
                class: "button is-rounded is-success is-outlined custom-button" do %>
                <p class="button is-rounded" disabled>book</p>
              <% end %>
            </td>
            
            <!--<td><a class = "button is-rounded is-success is-outlined custom-button"> Book </a></td>-->
            <% if is_admin? %>  
              <td><%= link_to 'Delete', availability, method: :delete, data: { confirm: 'Are you sure? This CANNOT be undone' },
              class: "button is-rounded is-danger is-outlined custom-button" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</section>