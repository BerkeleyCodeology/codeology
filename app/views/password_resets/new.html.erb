<% provide(:title, "Codeology | Password Reset") %>

<section class="is-fullheight">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <h2 class="is-size-2 is-size-3-mobile extra-top-padding">Password Reset</h2>

      <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <div class="input-field">
          <i class="material-icons prefix">mail_outline</i>
          <%= f.email_field :email, class: '' %>
          <label for="password_reset_email">email</label>          
        </div>
      
        <%= f.submit "Submit", class: "btn waves-effect waves-green white black-text is-round normal-caps", style: "margin-top: 10px;"%> 
        <p class="signup-link">New user? <%= link_to "Sign up now!", signup_path %></p>
      <% end %>

    </div>
  </div>
</section>