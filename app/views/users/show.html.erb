<% title = "Codeology | " + @user.name %>
<% provide(:title, title) %>

<p id="notice"><%= notice %></p>

<section id="profile" class="hero">
  <div class="hero-body">
    <div class="columns has-text-centered is-centered">
      <div class="column is-6">
        <h1 class="title is-4 has-text-black extra-top-padding">
            <strong>Name:</strong>
            <%= @user.name %>
        </h1>

        <h2 class="subtitle is-4 has-text-black">      
              <strong>Email:</strong>
              <%= @user.email %>
        </h2>
        <%= link_to 'Edit', edit_user_path(@user), class: "button is-rounded is-info is-outlined custom-button" %>
      </div>
    </div>
  </div>
</section>


