
<!-- STYLE SHEETS -->

<!-- LOADING SCREEN -->
<div id="loader">
</div>

<section id="landing" class="hero has-fixed-navbar is-fullheight landing is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="landing-title has-text-white">Codeology.</h1>
      <h5 class="landing-blurb is-size-3 is-size-3-tablet is-size-5-mobile has-text-white">
      <span class="is-codeology-yellow">Education.</span> 
      <span class="is-codeology-green">Exploration.</span> 
      <span class="is-codeology-blue">Community.</span> 
      </h5>
      <a href="#about-us" class="button-fade is-size-4 is-size-5-mobile" id="landing-button-transition">Learn More</a>	
    </div>
  </div>
  <div class="hero-foot"></div>
</section>

<!-- ABOUT US -->
<section id="about-us" class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
        <h2 class="title is-2 has-text-black">About Us</h2>
        <p class="subtitle is-size-4 is-size-5-mobile" style="line-height:1.25;">
        <strong>Here at Codeology,</strong> we provide opportunities for you to explore the tech industry 
        in the context of a supportive community. 
        <br>
        Whether your interest lies in engineering software, conceptualizing designs, or managing product direction, 
        we offer interview preparation and workshops to help you hone your professional 
        skills.</p>
        
        <%= link_to_nav_item "Read more >", about_us_path, :class => "is-codeology-blue is-size-3 is-size-4-mobile" %>
      </div>
    </div>
  </div>
</section>

<!-- PROJECTS -->
<section id="projects" class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
        <h2 class="title is-2 has-text-black">Projects</h2>
        <p class="subtitle is-size-4 is-size-5-mobile" style="line-height:1.25;">
        <strong>This semester</strong> we'll be introducing projects as an opportunity for our
          members to <strong>explore</strong> cool niches in tech, to gain <strong>experience</strong>
          as developers, and to <strong>lead</strong> their own project teams.
          </p>
        <!-- PROJECTS HERE -->
        <!-- Three projects are chosen at random in the static_pages_controller and in Projects.rb -->
        <div class="columns">
          <% @projects.each do |element| %>
            <div class="column is-one-third">
              <div class="card">
                <div class="card-image project-card-image">
                  <%= image_tag(element[:imgurl], :alt=>"project image", :class=>"image") %>
                </div>
                <div class="card-content">
                  <div class="media">
                    <div class="media-content">
                      <h5 class="project-card-title title is-5 has-text-black"><%= element[:name] %></h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <!-- END OF PROJECTS-->
        <%= link_to_nav_item "All Projects >", projects_path, :class => "is-codeology-green is-size-3 is-size-4-mobile" %>
      </div>
    </div>
  </div>
</section>

<!-- EVENTS -->
<section id="events" class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-10">
                <h2 class="title is-2 has-text-black">Events</h2>
                <p class="subtitle is-size-4 is-size-5-mobile" style="line-height:1.25;">
                We host <strong>workshops</strong> and <strong>tech talks</strong> on campus from club members and industry workers that are open to the public.
                </p>
                <%= link_to_nav_item "Our Calender >", calendar_path, :class => "is-codeology-yellow is-size-3 is-size-4-mobile" %>
            </div>
        </div>
    </div>
</section>


