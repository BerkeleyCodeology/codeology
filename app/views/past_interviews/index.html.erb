<section class="section">
  <div class="container is-fluid">
      
    <h1 class="title is-2 has-text-black small-vertical-padding has-text-centered">Completed Interviews</h1>
    <h1 class="title is-5 has-text-black ">Received Interviews</h1>
        
    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Interviewer</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @mappedPastReceiving.each do |receiving| %>
          <tr>
          <!-- TODO parse date and time for 1st and 2nd respectively -->
            <td class="is-size-5 is-size-6-mobile"><%= receiving[:interview].time.localtime.strftime("%m/%d/%y") %></td>
            <td class="is-size-5 is-size-6-mobile"><%= receiving[:interview].time.localtime.strftime("%I:%M %p") %></td>
            <td class="is-size-5 is-size-6-mobile"><%= receiving[:username] %></td>
            <% interview = receiving[:interview] %>
            <td><%= link_to 'Edit', edit_past_interview_path(interview), class: "button is-rounded is-info is-outlined custom-button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <h1 class="title is-5 has-text-black ">Given Interviews</h1>

    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Interviewee</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @mappedPastGiving.each do |giving| %>
          <tr>
          <!-- TODO parse date and time for 1st and 2nd respectively -->
            <td class="is-size-5 is-size-6-mobile"><%= giving[:interview].time.localtime.strftime("%m/%d/%y") %></td>
            <td class="is-size-5 is-size-6-mobile"><%= giving[:interview].time.localtime.strftime("%I:%M %p") %></td>
            <td class="is-size-5 is-size-6-mobile"><%= giving[:username] %></td>
            <% interview = giving[:interview] %>
            <td><%= link_to 'Edit', edit_past_interview_path(interview), class: "button is-rounded is-info is-outlined custom-button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>